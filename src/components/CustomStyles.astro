---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    /* fonts unchanged */
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* ===== Light theme ===== */
    /* Stronger CTA blue */
    --aw-color-primary: rgb(66 140 189);      /* #428CBD */
    /* Keep pastel as a soft accent (optional utility) */
    --aw-color-primary-soft: rgb(95 175 227); /* #5FAFE3 */

    --aw-color-secondary: rgb(199 132 90);    /* #C7845A */
    --aw-color-accent: rgb(122 143 109);      /* #7A8F6D */

    --aw-color-text-heading: rgb(16 16 16);
    --aw-color-text-default: rgb(47 47 47);
    --aw-color-text-muted: rgb(102 102 102);

    --aw-color-bg-page: rgb(249 247 244);

    ::selection { background-color: lavender; }
  }

  .dark {
    /* fonts unchanged */
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* On dark, use the brighter pastel for contrast */
    --aw-color-primary: rgb(95 175 227);      /* #5FAFE3 */
    --aw-color-primary-soft: rgb(66 140 189); /* #428CBD */

    --aw-color-secondary: rgb(167 101 70);    /* #A76546 */
    --aw-color-accent: rgb(145 167 127);      /* #91A77F */

    --aw-color-text-heading: rgb(249 250 251);
    --aw-color-text-default: rgb(249 250 251);
    --aw-color-text-muted: rgb(156 163 175);

    --aw-color-bg-page: rgb(26 26 26);

    ::selection { background-color: black; color: snow; }
  }
</style>
