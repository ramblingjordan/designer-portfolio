---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';

const { socialLinks = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer
  class:list={[
    { dark: theme === 'dark' },
    'border-t border-gray-200 dark:border-slate-800 not-prose',
  ]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 flex items-center justify-between py-6">
    <!-- Left: name or footnote -->
    <div class="flex flex-col">
      <a class="font-bold text-lg text-slate-900 dark:text-slate-200" href="/">
        {SITE?.name}
      </a>
      {footNote && (
        <span class="text-sm text-slate-500 dark:text-slate-400">{footNote}</span>
      )}
    </div>

    <!-- Right: social icons -->
    {socialLinks?.length ? (
      <ul class="flex items-center gap-3">
        {socialLinks.map(({ ariaLabel, href, icon }) => (
          <li>
            <a
              class="text-muted dark:text-gray-400 hover:text-slate-700 dark:hover:text-white transition rounded-lg p-2 inline-flex items-center"
              aria-label={ariaLabel}
              href={href}
            >
              {icon && <Icon name={icon} class="w-5 h-5" />}
            </a>
          </li>
        ))}
      </ul>
    ) : null}
  </div>
</footer>
